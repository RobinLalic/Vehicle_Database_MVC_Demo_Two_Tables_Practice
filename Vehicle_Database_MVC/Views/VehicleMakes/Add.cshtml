@model Vehicle_Database_MVC.Models.AddVehicleMakeViewModel

@{
}
<h1>Add a vehicle make</h1>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Vehicle Name</label>
        <input type="text" class="form-control" asp-for="VehicleName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Vehicle Abbreviation</label>
        <input type="text" class="form-control" asp-for="VehicleAbrv">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form> 
