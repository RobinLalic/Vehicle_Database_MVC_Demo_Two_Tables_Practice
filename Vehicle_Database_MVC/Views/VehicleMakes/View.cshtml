@model Vehicle_Database_MVC.Models.UpdateVehicleMakeViewModel

@{
}

<h1>Edit a vehicle make</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Vehicle Name</label>
        <input type="text" class="form-control" asp-for="VehicleName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Vehicle Abbreviation</label>
        <input type="text" class="form-control" asp-for="VehicleAbrv">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete"
    asp-controller="VehicleMakes">Delete</button>
</form> 
